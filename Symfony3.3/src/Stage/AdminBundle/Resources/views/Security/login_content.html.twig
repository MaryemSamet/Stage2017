{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<img src="{{ asset('bundles/stageadmin/img/logo.jpg') }}">
<div id="login">

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <input type="email" id="username" name="_username" value="{{ last_username }}" required="required" class="inp" /> <br> <br>

    <input type="password" id="password" name="_password" required="required" class="inp" /> <br> <br>

    <div class="help">
        <input type="checkbox" id="remember_me" name="_remember_me" value="on" class="souvenir"/>
        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
        <a id="mdp" href="{{ path('fos_user_resetting_request') }}">Mot de passe oubli√©</a>
    </div>
    <br>

    <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="connexion" />
    <hr>
</form>
</div>

